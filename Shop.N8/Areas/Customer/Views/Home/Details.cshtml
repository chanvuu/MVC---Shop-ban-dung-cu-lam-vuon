@model Shop.Models.Cart
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<h1>Product Details</h1>
<form method="post" asp-controller="Home">
    <div class="row">
        <div class="col-4">
            <img src="@Model.Product.ImageUrl" width="200" height="200"/>
            <input type="hidden" asp-for="ProductId"/>
        </div>
        <div class="col-8">
            <div class="row">
                <label asp-for="Product.ProductName">Product Name: @Model.Product.ProductName</label>
                <label asp-for="Product.Description">Product Description: @Model.Product.Description</label>
                <label asp-for="Product.Price">Product Price: @Model.Product.Price.ToString("N0") đ</label>
                <label asp-for="Product.Quatity">Product Quatity: @Model.Product.Quatity</label>
                <label asp-for="Product.Category.Id">Product Category: @Model.Product.Category.CategoryName</label>
@*                <div>
                    <label asp-for="SelectedQuantity">Selected Quantity: @Model.SelectedQuantity</label>
                </div>*@
                <div class="form-control">
                    <label asp-for="Count"></label>
                    <input asp-for="Count" class="form-control"/>
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>
            <div class="form-control">
                <button class="btn btn-success" asp-area="customer" asp-action="Index" asp-controller="Home">Back to list</button>
                <button type="submit" class="btn btn-dark">Add to Cart</button>
            </div>
        </div>
    </div>
</form>


