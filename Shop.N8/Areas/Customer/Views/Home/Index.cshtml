@model IEnumerable<Shop.Models.Product>
@using System.Globalization

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pb-4">
    @foreach (var item in @Model)
    {
        <div class="col-3 mb-4">
            <div class="card" style="width:100%;height:100%;">
                <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title" style="font-size: 1.2rem;">@item.ProductName</h5>
                    <p class="card-text" style="font-size: 1rem;">Price: @item.Price.ToString("N0") đ</p>
                    <a asp-action="Details" asp-controller="Home" asp-route-productId="@item.Id" class="btn btn-primary" style="font-size: 0.8rem;padding: 0.5rem 1rem;">Details</a>
                </div>
            </div>
        </div>
    }
</div>
