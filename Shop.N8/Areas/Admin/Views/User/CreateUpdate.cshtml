@model Shop.N8.Models.UserVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" asp-action="CreateUpdate" enctype="multipart/form-data">
    <input type="hidden" asp-for="ApplicationUser.Id" />

    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.ApplicationUser == null || Model.ApplicationUser.Id == 0.ToString() ? "Create" : "Update")) User</h2>
            <hr />
        </div>
        <div asp-validation-summary=All></div>

        <div class="form-group row pb-3">
            <label asp-for="ApplicationUser.Name"></label>
            <input asp-for="ApplicationUser.Name" class="form-control" />
            <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
        </div>

        <div class="form-group row pb-3">
            <label asp-for="ApplicationUser.Address"></label>
            <input asp-for="ApplicationUser.Address" class="form-control" />
            <span asp-validation-for="ApplicationUser.Address" class="text-danger"></span>
        </div>

        <div class="form-group row pb-3">
            <label asp-for="ApplicationUser.City"></label>
            <input asp-for="ApplicationUser.City" class="form-control" />
            <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
        </div>

        <div class="form-group row pb-3">
            <label asp-for="ApplicationUser.State"></label>
            <input asp-for="ApplicationUser.State" class="form-control" />
            <span asp-validation-for="ApplicationUser.State" class="text-danger"></span>
        </div>

        <div class="form-group row pb-3">
            <label asp-for="ApplicationUser.PinCode"></label>
            <input asp-for="ApplicationUser.PinCode" class="form-control" />
            <span asp-validation-for="ApplicationUser.PinCode" class="text-danger"></span>
        </div>

        @if (Model.ApplicationUser == null || Model.ApplicationUser.Id == 0.ToString())
        {
            <button class="btn btn-primary" type="submit">Create</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Update</button>
        }
    </div>
    <a asp-action="Index" asp-controller="User">Back to list</a>
</form>

@section script{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}