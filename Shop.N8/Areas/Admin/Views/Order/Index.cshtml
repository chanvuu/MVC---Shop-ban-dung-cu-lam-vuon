@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Orders</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Order" asp-action="Index" asp-route-status="Pending">
                Pending
            </a>
            <a asp-controller="Order" asp-action="Index" asp-route-status="Approved">
                Approved
            </a>
            <a asp-controller="Order" asp-action="Index" asp-route-status="Cancelled">
                Cancelled
            </a>
            <a asp-controller="Order" asp-action="Index" asp-route-status="all">
                All
            </a>
        </div>
    </div>
</div>

<table id="myTable" class="table table-bordered table-striped table-responsive" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Order Status</th>
            <th>OrderTotal</th>
            <th>Action</th>
        </tr>
    </thead>
</table>
@section scripts{
    <script src="~/js/Order.js"></script>
}
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
